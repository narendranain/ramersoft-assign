<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_white_1000"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:orientation="vertical"
            app:navigationIcon="@drawable/whiteback" />



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:src="@drawable/logo" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="10dp">

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tname"
          android:layout_marginTop="10dp"
        android:text="Name" />

      <EditText
        android:id="@+id/ename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tname"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_border"
        android:inputType="textCapSentences"
        android:textColor="@color/md_black_1000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ename"
            android:layout_marginTop="10dp"
            android:id="@+id/tquali"
            android:text="Qualification" />

        <EditText
            android:id="@+id/equali"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tquali"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_border"
            android:inputType="textCapSentences"
            android:textColor="@color/md_black_1000" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/taddrs"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/equali"
            android:text="Address along with pin code" />

        <EditText
            android:id="@+id/eaddrs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/taddrs"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_border"
            android:inputType="textCapSentences"
            android:textColor="@color/md_black_1000" />

        <Button
            android:id="@+id/register"
            style="@style/Base.TextAppearance.AppCompat.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/eaddrs"
            android:layout_marginTop="40dp"
            android:background="@drawable/edit_border"
            android:text="Register"
            android:textColor="@color/md_black_1000" />

        </RelativeLayout>





    </LinearLayout>


</ScrollView>